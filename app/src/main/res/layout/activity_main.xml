<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/v_background1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/bg_blue_white1"
        />
    <View
        android:id="@+id/v_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/v_background1"
        android:background="@drawable/bg_blue_white2"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo1"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/lbl_letsConnect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Letâ€™s connect with each other"
        android:fontFamily="@font/roboto_extra_bold"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textSize="28dp"
        android:layout_alignTop="@+id/v_background2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/lbl_Empowering"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:text="Empowering you with secure, seamless, and smart banking"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:layout_below="@+id/lbl_letsConnect"
        android:layout_centerHorizontal="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_getStarted"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_Empowering"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_s_button_gold"
        android:text="GET STARTED"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:shadowColor="@color/black"
        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_1"
        android:layout_alignTop="@+id/btn_getStarted"
        android:layout_alignRight="@+id/btn_getStarted"
        android:layout_alignBottom="@+id/btn_getStarted"
        android:layout_marginRight="10dp"
        android:elevation="21dp"
        />

</RelativeLayout>
