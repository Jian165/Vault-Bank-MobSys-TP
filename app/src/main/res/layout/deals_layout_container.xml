<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_dealsContainer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkBlue"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp"
                >

                <ImageView
                    android:id="@+id/img_deals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_discount" />
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/v_dealsTitle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/darkBlue"
                android:alpha="0.90"
                android:elevation="10dp"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/lbl_dealsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/v_dealsTitle"
                android:paddingBottom="10dp"
                android:text="Deals Title"
                android:elevation="10dp"
                android:padding="4dp"
                android:textSize="14dp"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="@font/roboto_regular"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>