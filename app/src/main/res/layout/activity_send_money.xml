<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMoney">

    <View
        android:id="@+id/v_Send_background1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/bg_blue_white1_10"
        />
    <View
        android:id="@+id/v_send_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/v_Send_background1"
        android:background="@drawable/bg_blue_white2_10"
        />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Epress Send"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/darkBlue"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        />
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblTitle"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/lbl_send_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="*Phone Number*"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="@color/darkBlue"
        android:letterSpacing="0.1"
        android:layout_below="@+id/imageLogo"
        />

    <EditText
        android:id="@+id/edt_send_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_send_phone"
        android:layout_alignLeft="@+id/lbl_send_phone"
        android:layout_alignRight="@+id/lbl_send_phone"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/bg_rgstr_textbox"
        android:inputType="phone"
        android:padding="12dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lbl_send_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_send_phone"
        android:layout_alignRight="@+id/edt_send_phone"
        android:layout_marginTop="16dp"
        android:text="*Amount*"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="@color/darkBlue"
        android:letterSpacing="0.1"
        android:layout_below="@+id/edt_send_phone"
        />

    <EditText
        android:id="@+id/edt_send_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_send_amount"
        android:layout_alignLeft="@+id/lbl_send_amount"
        android:layout_alignRight="@+id/lbl_send_amount"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/bg_rgstr_textbox"
        android:inputType="phone"
        android:padding="12dp"
        android:textSize="16dp" />
    <Switch
        android:id="@+id/switchPay"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/bg_rgstr_textbox"
        android:text="Enable Secure Pay"
        android:textSize="16dp"
        android:trackTint="@color/white"
        android:textColor="@color/white"
        android:layout_below="@+id/v_Send_background1"
        android:layout_marginTop="16dp"
        android:layout_rowWeight="1"
        android:fontFamily="@font/roboto_variable"
        android:textStyle="bold"
        android:letterSpacing="0.08"
        android:layout_columnWeight="1"
        android:layout_alignLeft="@+id/edt_send_amount"
        android:layout_alignRight="@+id/edt_send_amount"
        tools:ignore="UseSwitchCompatOrMaterialXml" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_Next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_s_button_gold"
        android:text="Next"
        android:letterSpacing="0.1"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/edt_send_amount"
        android:layout_alignRight="@+id/edt_send_amount"
        android:shadowColor="@color/black"
        />
</RelativeLayout>