<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <View
        android:id="@+id/v_background1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_white_blue1"
        />
    <View
        android:id="@+id/v_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/v_background1"
        android:background="@drawable/bg_white_blue2"
        />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Epress Send"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        />
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo2"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        />
    <TextView
        android:id="@+id/lblReqstAmnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Request Amount*"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_below="@+id/imageLogo"
        />

    <EditText
        android:id="@+id/edt_amnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblReqstAmnt"
        android:background="@drawable/bg_login_textbox"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="34dp"
        android:paddingRight="28dp"
        android:textSize="16dp"
        android:layout_alignLeft="@+id/lblReqstAmnt"
        android:layout_alignRight="@+id/lblReqstAmnt"
        />
    <TextView
        android:id="@+id/lblInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Your Information"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="19dp"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:layout_below="@+id/edt_amnt"
        android:layout_marginTop="120dp"
        />
    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="•  Name"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:layout_below="@+id/lblInfo"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="•  Birthday"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:layout_below="@+id/Name"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/mobNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="•  Mobile Number"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:layout_below="@+id/Birthday"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="•  Email"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:letterSpacing="0.1"
        android:layout_below="@+id/mobNum"
        android:layout_marginTop="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rqstMoney"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_s_button_gold"
        android:text="Request Money"
        android:letterSpacing="0.1"
        android:layout_marginTop="100dp"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:layout_below="@+id/Email"
        android:layout_alignLeft="@+id/edt_amnt"
        android:layout_alignRight="@+id/edt_amnt"
        android:shadowColor="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_rgstr_textbox"
        android:text="Request Money"
        android:letterSpacing="0.1"
        android:textColor="@color/blueNigga"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_rqstMoney"
        android:layout_alignLeft="@+id/btn_rqstMoney"
        android:layout_alignRight="@+id/btn_rqstMoney"
        android:shadowColor="@color/black"
        />

</RelativeLayout>