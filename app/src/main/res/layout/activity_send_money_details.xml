<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMoneyDetails">
    <View
        android:id="@+id/v_sendDetails_background1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_blue_white1_10"
        />
    <TextView
    android:id="@+id/lblTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Express Send"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:background="@color/white"
    android:textAlignment="center"
    android:fontFamily="@font/roboto_extra_bold"
    android:layout_centerHorizontal="true"
    android:textSize="20dp"
    android:textColor="@color/darkBlue"
    android:letterSpacing="0.1"
    />
    <ImageView
        android:id="@+id/img_receiver"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/v_sendDetails_background1"
        android:layout_marginTop="-55dp"
        android:background="@drawable/bg_white_oval"
        android:src="@drawable/img_user"
        android:padding="4dp"
        android:elevation="10dp"
        android:layout_marginBottom="-50dp"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/v_send_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/v_sendDetails_background1"
        android:background="@drawable/bg_blue_white2_10"
        />
    <TextView
        android:id="@+id/lbl_receiverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*AN***DA*F"
        android:layout_below="@id/img_receiver"
        android:layout_marginTop="74dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/lbl_receiverPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09538934560"
        android:layout_below="@id/lbl_receiverName"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/lbl_receiverName"
        android:layout_alignRight="@+id/lbl_receiverName"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        />
    <GridLayout
        android:id="@+id/g_send_info"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/lbl_receiverPhone"
        android:layout_alignLeft="@id/lbl_receiverName"
        android:layout_alignRight="@id/lbl_receiverName"
        android:rowCount="4"
        android:columnCount="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Account blance"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_variable"
            android:textSize="18dp"
            android:letterSpacing="0.08"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/lbl_currentBalance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="$100"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:fontFamily="@font/roboto_variable"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Your about to send"
            android:textColor="@color/Blue"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_variable"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:letterSpacing="0.08"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textDirection="rtl"
            android:fontFamily="@font/roboto_variable"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Amount"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_variable"
            android:textSize="18dp"
            android:letterSpacing="0.08"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/lbl_AmountSend"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="$100"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:fontFamily="@font/roboto_variable"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />
        <TextView
            android:id="@+id/lbl_SecurePay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Secure Pay"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_variable"
            android:textSize="18dp"
            android:letterSpacing="0.08"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/lbl_SecureAmout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="â‚±30"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:fontFamily="@font/roboto_variable"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />
    </GridLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_below="@+id/g_send_info"
        app:cardBackgroundColor="@color/blue5A"
        android:layout_alignLeft="@+id/g_send_info"
        android:layout_alignRight="@+id/g_send_info"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amout To Pay:"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_extra_bold"
                android:textSize="16dp"
                android:letterSpacing="0.05"
                />

            <TextView
                android:id="@+id/TotalPayment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="$10000"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_extra_bold"
                android:gravity="center_vertical"
                android:textDirection="rtl"
                android:textSize="32dp"
                android:letterSpacing="0.05"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_s_button_gold"
        android:text="send"
        android:letterSpacing="0.1"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lbl_receiverName"
        android:layout_alignRight="@+id/lbl_receiverName"
        android:shadowColor="@color/black"
        />
</RelativeLayout>