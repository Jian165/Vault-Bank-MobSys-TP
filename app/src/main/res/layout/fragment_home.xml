<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:id="@+id/l_T_logo_area"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignRight="@+id/v_balance_Container"
            android:layout_alignLeft="@+id/v_balance_Container"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="bottom"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo2"
                android:scaleType="fitStart"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="MM-DD-YYY"
                android:fontFamily="@font/roboto_extra_bold"
                android:textColor="@color/darkBlue"
                android:textSize="13dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                />
        </LinearLayout>

        <View
            android:id="@+id/v_balance_Container"
            android:layout_width="wrap_content"
            android:layout_height="237dp"
            android:background="@drawable/bg_dashboard_yellow"
            android:alpha="0.25"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/l_T_logo_area"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_balanceCard"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/v_balance_Container"
            android:layout_alignLeft="@+id/v_balance_Container"
            android:layout_alignTop="@+id/v_balance_Container"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gold_container"
                >
                <TextView
                    android:id="@+id/lbl_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello Mark"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:textColor="@color/darkBlue"
                    android:textSize="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <View
                    android:id="@+id/v_cardLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkBlue"
                    android:layout_below="@+id/lbl_username"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/lbl_totalBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_cardLine"
                    android:layout_alignLeft="@+id/lbl_username"
                    android:layout_alignRight="@+id/lbl_username"
                    android:text="Total Savings Balance"
                    android:fontFamily="@font/roboto_variable"
                    android:textStyle="bold"
                    android:textColor="@color/darkBlue"
                    android:textSize="16dp"
                    android:letterSpacing="0.08"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_totalBalance"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/lbl_username"
                    android:layout_alignRight="@+id/lbl_username"
                    android:layout_marginBottom="20dp"
                    android:text="$100,000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_extra_bold"
                    android:textSize="60dp"
                    android:textColor="@color/darkBlue"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_balanceCard"
            android:layout_alignLeft="@+id/cv_balanceCard"
            android:layout_alignRight="@id/cv_balanceCard"
            android:layout_alignBottom="@+id/v_balance_Container"
            app:cardBackgroundColor="@color/darkBlue"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <GridLayout
                android:id="@+id/icon_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:rowCount="3"
                android:columnCount="4"
                >
                <ImageButton
                    android:id="@+id/btn_sendMoney"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:background="@color/darkBlue"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send_money"
                    />
                <ImageButton
                    android:id="@+id/btn_receiveMoney"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:background="@color/darkBlue"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_transfer_solid"
                    />
                <ImageButton
                    android:id="@+id/btn_borrowMoney"
                    android:padding="1dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:background="@color/darkBlue"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_borrow"
                    />
                <ImageButton
                    android:id="@+id/btn_savings"
                    android:layout_width="0dp"
                    android:padding="1dp"
                    android:layout_height="5dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="2"
                    android:background="@color/darkBlue"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_savings"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Creadit"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Send"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Receive"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Savings"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    />
            </GridLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/v_servicesContainer"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/v_balance_Container"
            android:layout_alignRight="@+id/v_balance_Container"
            android:layout_alignLeft="@+id/v_balance_Container"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_dashboard_yellow"
            android:alpha="0.25"
            />

        <TextView
            android:id="@+id/lbl_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/v_servicesContainer"
            android:layout_alignLeft="@id/v_servicesContainer"
            android:layout_alignRight="@id/v_servicesContainer"
            android:text="Other Services"
            android:textSize="16dp"
            android:textColor="@color/darkBlue"
            android:fontFamily="@font/roboto_extra_bold"
            android:paddingLeft="5dp"
            />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/v_servicesContainer"
            android:layout_alignRight="@id/v_servicesContainer"
            android:layout_alignBottom="@+id/v_servicesContainer"
            android:layout_below="@+id/lbl_services"
            android:layout_marginTop="8dp"
            android:columnCount="5"
            android:rowCount="3"
            >
            <ImageButton
                android:id="@+id/btn_stocks"
                android:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="2"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_stocks"
                android:padding="5dp"
                />
            <ImageButton
                android:id="@+id/btn_buyLoad"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_buyload"
                android:padding="5dp"
                />
            <ImageButton
                android:id="@+id/btn_shopping"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_shopping"
                android:padding="5dp"
                />
            <ImageButton
                android:id="@+id/btn_transfer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_banktransfer"
                android:padding="5dp"
                />
            <ImageButton
                android:id="@+id/btn_payBills"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_paybills"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Stocks"
                android:fontFamily="@font/roboto_variable"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textColor="@color/darkBlue"
                android:textSize="12dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Buy Load"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/roboto_variable"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textSize="12dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Shopping"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/roboto_variable"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textSize="12dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Transfer"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/roboto_variable"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textSize="12dp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Pay Bills"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/roboto_variable"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textSize="12dp"
                android:textAlignment="center"
                />
        </GridLayout>

    <View
        android:id="@+id/v_deals_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/v_servicesContainer"
        android:layout_alignRight="@+id/v_servicesContainer"
        android:layout_below="@+id/v_servicesContainer"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_dashboard_yellow"
        android:alpha="0.25"
        />
        <TextView
            android:id="@+id/lbl_deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deals"
            android:textSize="16dp"
            android:padding="4dp"
            android:fontFamily="@font/roboto_extra_bold"
            android:textColor="@color/darkBlue"
            android:layout_alignTop="@+id/v_deals_promo"
            android:layout_alignLeft="@+id/v_deals_promo"
            android:layout_alignRight="@+id/v_deals_promo"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_deals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_deals"
            android:orientation="vertical"
            android:layout_alignLeft="@id/cv_balanceCard"
            android:layout_alignRight="@id/cv_balanceCard"
            android:layout_alignBottom="@id/v_deals_promo"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</FrameLayout>