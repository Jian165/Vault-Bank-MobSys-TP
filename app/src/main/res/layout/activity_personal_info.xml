<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfo">

        <View
            android:id="@+id/v_request_background1"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:background="@drawable/bg_blue_white1"
            />
        <View
            android:id="@+id/v_request_background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/v_request_background1"
            android:background="@drawable/bg_blue_white2"
            />

        <TextView
            android:id="@+id/lblRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/roboto_extra_bold"
            android:letterSpacing="0.1"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textColor="@color/darkBlue"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/lbl_R_Firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblRegister"
            android:layout_marginBottom="4dp"
            android:text="First Name"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_variable"
            android:layout_alignRight="@+id/lblRegister"
            android:layout_alignLeft="@+id/lblRegister"
            android:layout_marginTop="12dp"
            />

        <EditText
            android:id="@+id/edt_R_Firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_R_Firstname"
            android:background="@drawable/bg_rgstr_textbox"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:inputType="textPersonName"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:layout_alignLeft="@+id/lbl_R_Firstname"
            android:layout_alignRight="@+id/lbl_R_Firstname"
            />

        <TextView
            android:id="@+id/lbl_R_LastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_R_Firstname"
            android:text="Last Name"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_variable"
            android:layout_alignRight="@+id/lblRegister"
            android:layout_alignLeft="@+id/lblRegister"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/edt_R_LastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_R_LastName"
            android:layout_alignLeft="@+id/lbl_R_Firstname"
            android:layout_alignRight="@+id/lbl_R_Firstname"
            android:background="@drawable/bg_rgstr_textbox"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />

        <TextView
            android:id="@+id/lbl_R_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_variable"
            android:layout_alignRight="@+id/lbl_R_LastName"
            android:layout_alignLeft="@+id/lbl_R_LastName"
            android:layout_below="@+id/edt_R_LastName"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/edt_R_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_R_PhoneNumber"
            android:layout_alignLeft="@+id/lbl_R_PhoneNumber"
            android:layout_alignRight="@+id/lbl_R_PhoneNumber"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_rgstr_textbox"
            android:inputType="phone"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />

        <TextView
            android:id="@+id/lbl_R_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_variable"
            android:layout_alignRight="@+id/lbl_R_PhoneNumber"
            android:layout_alignLeft="@+id/lbl_R_PhoneNumber"
            android:layout_below="@+id/edt_R_PhoneNumber"
            android:layout_marginTop="16dp"
            />
        <EditText
            android:id="@+id/edt_R_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_R_email"
            android:background="@drawable/bg_rgstr_textbox"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_alignLeft="@+id/lbl_R_PhoneNumber"
            android:layout_alignRight="@+id/lbl_R_PhoneNumber"
            />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_1"
        android:elevation="10dp"
        android:padding="4dp"
       android:layout_marginRight="12dp"
        android:layout_alignTop="@+id/btn_R_Next"
        android:layout_alignRight="@+id/btn_R_Next"
        android:layout_alignBottom="@+id/btn_R_Next"
        />
    <TextView
        android:id="@+id/lbl_Error_PersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Red"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/edt_R_email"
        android:layout_alignRight="@+id/edt_R_email"
        android:layout_above="@+id/btn_R_Next"
        android:layout_marginBottom="50dp"

        />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_R_Next"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/bg_s_button_gold"
            android:fontFamily="@font/roboto_extra_bold"
            android:letterSpacing="0.1"
            android:shadowColor="@color/black"
            android:text="Next"
            android:textColor="@color/darkBlue"
            android:textSize="16dp" />

    </RelativeLayout>