<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <View
        android:id="@+id/v_background1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_white_blue1"
        />
    <View
        android:id="@+id/v_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/v_background1"
        android:background="@drawable/bg_white_blue2"
        />




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_s_button_gold"
        android:text="Login"
        android:letterSpacing="0.1"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:shadowColor="@color/black"
        />

</RelativeLayout>