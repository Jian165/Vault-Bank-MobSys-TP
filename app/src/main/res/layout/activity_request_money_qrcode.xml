<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestMoneyQRCode">

    <View
        android:id="@+id/v_requestrq_background1"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/bg_white_blue1"
        />
    <View
        android:id="@+id/v_request_background2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/v_requestrq_background1"
        android:background="@drawable/bg_white_blue2"
        />

    <TextView
        android:id="@+id/lblTitleRQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Epress Send"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        />
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblTitleRQ"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/lbl_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Scan the QR code"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_below="@+id/imageLogo"
        />

    <View
        android:id="@+id/img_qr_container"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/lbl_scan"
        android:background="@drawable/bg_login_textbox"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qr_code"
        android:layout_alignLeft="@id/img_qr_container"
        android:layout_alignRight="@id/img_qr_container"
        android:layout_alignTop="@id/img_qr_container"
        android:layout_alignBottom="@id/img_qr_container"
        />
    <TextView
        android:id="@+id/lbl_qr_No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Phone Number"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_below="@+id/img_qr_container"
        />

    <TextView
        android:id="@+id/lbl_qr_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Amout"
        android:fontFamily="@font/roboto_extra_bold"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:layout_below="@+id/lbl_qr_No"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_rgstr_textbox"
        android:text="cancel"
        android:letterSpacing="0.1"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/roboto_extra_bold"
        android:textSize="16dp"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_alignLeft="@+id/lbl_scan"
        android:layout_alignRight="@+id/lbl_scan"
        android:shadowColor="@color/black"
        />

</RelativeLayout>