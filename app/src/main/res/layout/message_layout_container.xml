<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/v_transaction_c"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/bg_white_blue1_10"
                />
            <View
                android:id="@+id/v_transaction2_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_blue2_10"
                android:layout_below="@id/v_transaction_c"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:id="@+id/img_transaction"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_email_yellow"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:id="@+id/lbl_transactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:layout_alignTop="@id/v_transaction_c"
                android:layout_alignBottom="@id/v_transaction_c"
                android:layout_toEndOf="@+id/img_transaction"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.05"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/lbl_transactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_alignTop="@id/v_transaction_c"
                android:layout_alignBottom="@id/v_transaction_c"
                android:layout_alignRight="@+id/v_transaction_c"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.05"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/lbl_transactionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_transaction_c"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="sjdiqwiewijeiwqiejiwjeijwejiwje"
                android:textColor="@color/darkBlue"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16dp"
                />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>